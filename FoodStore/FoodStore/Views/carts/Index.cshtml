
@model IEnumerable<FoodStore.Models.cart>

@{
    ViewBag.Title = "Cart";
    decimal subtotal = 0m;
    decimal shipping = 0m;
}

<h2>Cart</h2>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cart in Model)
                    {
                        if ((int)(Session["id"]) == cart.user_id)
                        {
                            foreach (var cartItem in cart.cart_item)
                            {
                                var total = (decimal)(cartItem.quantity * (cartItem.product.price ?? 0m));
                                subtotal += total;
                                <tr>
                                    <th scope="row">
                                        <div class="d-flex align-items-center">
                                            <img src="@cartItem.product.image_url" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                        </div>
                                    </th>
                                    <td>
                                        <p class="mb-0 mt-4">@cartItem.product.name</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4">@cartItem.product.price JD / kg</p>
                                    </td>
                                    <td>
                                        <div class="input-group quantity mt-4" style="width: 100px;">
                                            <div class="input-group-btn">
                                                @using (Html.BeginForm("DecreaseQuantity", "Carts", FormMethod.Post))
                                                {
                                                    @Html.Hidden("cartItemId", cartItem.id)
                                                    <button type="submit" class="btn btn-sm btn-minus rounded-circle bg-light border">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                }
                                            </div>
                                            <input type="text" class="form-control form-control-sm text-center border-0" style="background-color: #ffffff;" value="@cartItem.quantity" readonly>
                                            <div class="input-group-btn">
                                                @using (Html.BeginForm("IncreaseQuantity", "Carts", FormMethod.Post))
                                                {
                                                    @Html.Hidden("cartItemId", cartItem.id)
                                                    <button type="submit" class="btn btn-sm btn-plus rounded-circle bg-light border">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4">@total JDs</p>
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("DeleteItem", "Carts", FormMethod.Post))
                                        {
                                            @Html.Hidden("cartItemId", cartItem.id)
                                            <button type="submit" class="btn btn-md rounded-circle bg-light border mt-4">
                                                <i class="fa fa-times text-danger"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0">@subtotal JDs</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div>
                                @{
                                    shipping = subtotal * 0.15m;
                                }

                                @if (subtotal >= 20)
                                {
                                    shipping = 0;
                                    <p class="mb-0"> Free shipping For Orders Above 20 JDs</p>
                                }
                                else
                                {

                                    <p class="mb-0">@shipping JDS</p>
                                }



                            </div>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4">@((subtotal + shipping).ToString("0.00")) JDs</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
