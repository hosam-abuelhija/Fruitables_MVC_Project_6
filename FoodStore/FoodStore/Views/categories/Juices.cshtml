@model IEnumerable<FoodStore.Models.product>
@{
    ViewBag.Title = "Juices";
}

<h2>Juices</h2>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Our Organic Products</h1>
                </div>
            </div>
            <br /><br />
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                @foreach (var item in Model)
                                {
                                    if (item.category_id == 3)
                                    {
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <a href="@Url.Action("Product", "categories", new { id = item.id })"> <img src="@item.image_url" class="img-fluid w-100 rounded-top" alt="" style="width:306px !important; height:200px !important;"> </a>
                                                    
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Juices</div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4>@item.name</h4>
                                                    <p>All of our fruits are hand picked and well taken care of, to give you the best juices possible</p>
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">@item.price JD / kg</p>

                                                        @using (Html.BeginForm("AddToCart", "carts", FormMethod.Post))
                                                        {
                                                            @Html.Hidden("productId", item.id)
                                                            <input type="hidden" name="quantity" value="1" />
                                                            <button type="submit" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                                <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>